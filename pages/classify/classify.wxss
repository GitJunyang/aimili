/* pages/classify/classify.wxss */

.header{
    height: 75rpx;
    width: 750rpx;
}
.price_img{
    height: 20rpx;
    width: 20rpx;
    padding-bottom: 5rpx;
    /*margin-top: 20rpx;*/
}
.sx_img{
    height: 26rpx;
    width: 26rpx;
    padding-bottom: 2rpx;
    /*margin-top: 20rpx;*/
}
.item{
    height: 75rpx;
    width: 187.5rpx;
    text-align: center;
    float: left;
    font-size: 35rpx;
    line-height: 75rpx;
}
.selected_wrap{
    background: gainsboro;
    height: 65rpx; 
    overflow-x:hidden; 
    overflow: scroll;
    word-break: keep-all;
}
.classify{
    width: 250rpx;
    float: left;
}
.s_i{
    width: 250rpx;
    height: 75rpx;
    text-align: center;
    line-height: 75rpx;
}
.s_i:hover{
    color: #f65d89;
}
.option{
    width: 497rpx;
    float: right;
    border-left: 3rpx solid gray;
}
.o_i{
    width: 500rpx;
    height: 75rpx;
    text-align: center;
    line-height: 75rpx;
}
.line_c{
    width: 250rpx;
    height: 3rpx;
    background: grey;
}
.line_o{
    width: 500rpx;
    height: 3rpx;
    background: grey;
}
.queryr{
    background: #f65d89;
    height: 100rpx;
    width: 375rpx;
    text-align: center;
    line-height: 100rpx;
    float: left;
    position: absolute;
    bottom: 2rpx;
    right:0rpx;
}
.queryl{
    background: lavender;
    height: 100rpx;
    width: 375rpx;
    text-align: center;
    line-height: 100rpx;
    float: left;
    position: absolute;
    bottom: 2rpx;
    left:0rpx;
}
.choose{
    height: 75rpx;
    width: 75rpx;
    float: right;
    background: limegreen;
}
.selected{
    display: inline;
    /*font-size: 35rpx;*/
    line-height: 63rpx;
    margin-left: 40rpx;
    background: white;
    text-align: center;
    padding: 2rpx 20rpx;
    border-radius: 10rpx;
}
.selected_item{
    font-size: 35rpx;
    display: inline;
    white-space:nowrap;
}
.select_yes{
    float: right;
    display: block;
    height: 35rpx;
    width: 40rpx;
    margin-right: 50rpx;
    margin-top: 20rpx;
}